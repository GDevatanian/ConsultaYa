<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient">

    <!-- Botón X para cerrar -->
    <ImageView
        android:id="@+id/btnCerrar"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="16dp"
        android:padding="12dp"
        android:src="@drawable/ic_close"
        app:tint="@color/text_dark"
        android:contentDescription="Cerrar" />

    <!-- Contenido central -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="32dp">

        <!-- Contenedor de la animación de confetti -->
        <FrameLayout
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginBottom="32dp">

            <!-- Círculo verde de fondo -->
            <View
                android:id="@+id/circleBackground"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:background="@drawable/circle_success" />

            <!-- Ícono de check -->
            <ImageView
                android:id="@+id/iconCheck"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_check"
                app:tint="@android:color/white" />

            <!-- Partículas de confetti (se animan con código) -->
            <View
                android:id="@+id/confetti1"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_gravity="center"
                android:background="@drawable/confetti_particle"
                android:backgroundTint="@color/teal_icon" />
            <View
                android:id="@+id/confetti2"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_gravity="center"
                android:background="@drawable/confetti_particle"
                android:backgroundTint="#FFC107" />
            <View
                android:id="@+id/confetti3"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_gravity="center"
                android:background="@drawable/confetti_particle"
                android:backgroundTint="#E91E63" />
            <View
                android:id="@+id/confetti4"
                android:layout_width="11dp"
                android:layout_height="11dp"
                android:layout_gravity="center"
                android:background="@drawable/confetti_particle"
                android:backgroundTint="#2196F3" />
            <View
                android:id="@+id/confetti5"
                android:layout_width="9dp"
                android:layout_height="9dp"
                android:layout_gravity="center"
                android:background="@drawable/confetti_particle"
                android:backgroundTint="#4CAF50" />
            <View
                android:id="@+id/confetti6"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_gravity="center"
                android:background="@drawable/confetti_particle"
                android:backgroundTint="#FF5722" />
            <View
                android:id="@+id/confetti7"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_gravity="center"
                android:background="@drawable/confetti_particle"
                android:backgroundTint="#9C27B0" />
            <View
                android:id="@+id/confetti8"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_gravity="center"
                android:background="@drawable/confetti_particle"
                android:backgroundTint="@color/teal_border" />
        </FrameLayout>

        <!-- Título -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¡Turno Confirmado!"
            android:textSize="28sp"
            android:textColor="@color/teal_icon"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <!-- Subtítulo -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tu videoconsulta ha sido agendada exitosamente"
            android:textSize="16sp"
            android:textColor="@color/text_gray"
            android:textAlignment="center"
            android:layout_marginBottom="32dp" />

        <!-- Card con detalles del turno -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_button"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Médico -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_person"
                    app:tint="@color/teal_icon"
                    android:layout_marginEnd="12dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Médico"
                        android:textSize="12sp"
                        android:textColor="@color/text_gray" />

                    <TextView
                        android:id="@+id/txtMedicoConfirmado"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Dr. Juan Pérez"
                        android:textSize="16sp"
                        android:textColor="@color/text_dark"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>

            <!-- Fecha y hora -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_calendar"
                    app:tint="@color/teal_icon"
                    android:layout_marginEnd="12dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Fecha y hora"
                        android:textSize="12sp"
                        android:textColor="@color/text_gray" />

                    <TextView
                        android:id="@+id/txtFechaConfirmada"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="25/11/2025, 10:00hs"
                        android:textSize="16sp"
                        android:textColor="@color/text_dark"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>

            <!-- Especialidad -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_medical"
                    app:tint="@color/teal_icon"
                    android:layout_marginEnd="12dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Especialidad"
                        android:textSize="12sp"
                        android:textColor="@color/text_gray" />

                    <TextView
                        android:id="@+id/txtEspecialidadConfirmada"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cardiología"
                        android:textSize="16sp"
                        android:textColor="@color/text_dark"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <!-- Mensaje informativo -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Recibirás un recordatorio antes de tu consulta"
            android:textSize="14sp"
            android:textColor="@color/text_gray"
            android:textAlignment="center" />

    </LinearLayout>

    <!-- Botón ir a Home -->
    <Button
        android:id="@+id/btnIrHome"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/rounded_button_primary"
        android:text="Ir al inicio"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:textAllCaps="false" />

</RelativeLayout>

