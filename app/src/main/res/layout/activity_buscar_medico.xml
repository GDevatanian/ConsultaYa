<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient">

    <View
        android:id="@+id/overlayFiltros"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
        android:visibility="gone"
        android:clickable="true"
        android:focusable="true" />

    <LinearLayout
        android:id="@+id/menuFiltros"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="20dp"
        android:orientation="vertical"
        android:background="@drawable/rounded_button"
        android:padding="8dp"
        android:elevation="8dp"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ordenar por:"
            android:textSize="14sp"
            android:textColor="@color/text_dark"
            android:textStyle="bold"
            android:layout_marginBottom="4dp" />
        <LinearLayout
            android:id="@+id/btnFiltroEspecialidad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="8dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Especialidad"
                android:textSize="12sp"
                android:textColor="@color/text_dark" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=">"
                android:textSize="14sp"
                android:textColor="@color/teal_icon" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/btnFiltroNombreAsc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="8dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Nombre (A-Z)"
                android:textSize="12sp"
                android:textColor="@color/text_dark" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=">"
                android:textSize="14sp"
                android:textColor="@color/teal_icon" />
        </LinearLayout>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottomNav">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp">
                <ImageView
                    android:id="@+id/btnBack"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_arrow_back"
                    android:padding="4dp"
                    app:tint="@color/text_dark"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Buscar médico"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_dark"
                    android:layout_centerInParent="true"/>
                <TextView
                    android:id="@+id/btnFiltro"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_alignParentEnd="true"
                    android:text="☰"
                    android:textSize="20sp"
                    android:textColor="@color/text_dark"
                    android:gravity="center"/>
            </RelativeLayout>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Buscar por especialidad, nombre o ubicación"
                android:background="@drawable/search_background"
                android:padding="12dp"
                android:drawableStart="@drawable/ic_search"
                android:drawablePadding="8dp"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:id="@+id/labelFiltroActivo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ordenado por: Especialidad"
                android:textSize="12sp"
                android:textColor="@color/text_gray"
                android:layout_marginBottom="12dp"/>

            <LinearLayout
                android:id="@+id/listaMedicosEspecialidad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/rounded_button"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="16dp">
                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginEnd="16dp"
                        android:background="@drawable/avatar_circle_background"
                        android:scaleType="centerCrop"
                        android:clipToOutline="true"
                        android:src="@drawable/pepe_pepito"
                        android:contentDescription="@null"/>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:text="Dr. Pepe Pepito"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text_gray"
                            android:textSize="14sp"
                            android:text="Cardiologia"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text_gray"
                            android:textSize="12sp"
                            android:text="◇ 4.8 (128)"/>
                    </LinearLayout>
                    <Button
                        android:id="@+id/btnAgendar1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="Agendar"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/rounded_button"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="16dp">
                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginEnd="16dp"
                        android:background="@drawable/avatar_circle_background"
                        android:scaleType="centerCrop"
                        android:clipToOutline="true"
                        android:src="@drawable/juan_perez"
                        android:contentDescription="@null"/>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:text="Dr. Juan Perez"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text_gray"
                            android:textSize="14sp"
                            android:text="Clinico"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text_gray"
                            android:textSize="12sp"
                            android:text="◇ 4.9 (203)"/>
                    </LinearLayout>
                    <Button
                        android:id="@+id/btnAgendar3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="Agendar"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/rounded_button"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="16dp">
                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginEnd="16dp"
                        android:background="@drawable/avatar_circle_background"
                        android:scaleType="centerCrop"
                        android:clipToOutline="true"
                        android:src="@drawable/pepa_pepita"
                        android:contentDescription="@null"/>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:text="Dra. Pepa Pepita"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text_gray"
                            android:textSize="14sp"
                            android:text="Dermatologia"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text_gray"
                            android:textSize="12sp"
                            android:text="◇ 4.6 (95)"/>
                    </LinearLayout>
                    <Button
                        android:id="@+id/btnAgendar2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="Agendar"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/listaMedicosNombreAsc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/rounded_button"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="16dp">
                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginEnd="16dp"
                        android:background="@drawable/avatar_circle_background"
                        android:scaleType="centerCrop"
                        android:clipToOutline="true"
                        android:src="@drawable/pepa_pepita"
                        android:contentDescription="@null"/>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:text="Dra. Pepa Pepita"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text_gray"
                            android:textSize="14sp"
                            android:text="Dermatologia"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text_gray"
                            android:textSize="12sp"
                            android:text="◇ 4.6 (95)"/>
                    </LinearLayout>
                    <Button
                        android:id="@+id/btnAgendar2_nombre"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="Agendar"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/rounded_button"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="16dp">
                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginEnd="16dp"
                        android:background="@drawable/avatar_circle_background"
                        android:scaleType="centerCrop"
                        android:clipToOutline="true"
                        android:src="@drawable/juan_perez"
                        android:contentDescription="@null"/>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:text="Dr. Juan Perez"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text_gray"
                            android:textSize="14sp"
                            android:text="Clinico"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text_gray"
                            android:textSize="12sp"
                            android:text="◇ 4.9 (203)"/>
                    </LinearLayout>
                    <Button
                        android:id="@+id/btnAgendar3_nombre"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="Agendar"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/rounded_button"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="16dp">
                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginEnd="16dp"
                        android:background="@drawable/avatar_circle_background"
                        android:scaleType="centerCrop"
                        android:clipToOutline="true"
                        android:src="@drawable/pepe_pepito"
                        android:contentDescription="@null"/>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:text="Dr. Pepe Pepito"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text_gray"
                            android:textSize="14sp"
                            android:text="Cardiologia"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text_gray"
                            android:textSize="12sp"
                            android:text="◇ 4.8 (128)"/>
                    </LinearLayout>
                    <Button
                        android:id="@+id/btnAgendar1_nombre"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="Agendar"/>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#9E9E9E"
        android:layout_above="@+id/bottomNav" />
    <LinearLayout
        android:id="@+id/bottomNav"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:background="#FFFFFF"
        android:elevation="8dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp">
    </LinearLayout>

</RelativeLayout>