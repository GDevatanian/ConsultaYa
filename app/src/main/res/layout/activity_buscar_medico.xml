<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient">

    <!-- Header con flecha y barra de búsqueda -->
    <LinearLayout
        android:id="@+id/headerSearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="horizontal"
        android:background="@color/teal_icon"
        android:gravity="center_vertical"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:paddingLeft="0dp"
        android:paddingRight="12dp"
        android:elevation="4dp">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_arrow_back"
            android:padding="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            app:tint="#424242"
            xmlns:app="http://schemas.android.com/apk/res-auto"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/rounded_field"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">

            <View
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/diamond_shape"
                android:layout_marginRight="12dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Buscar especialidad o nombre"
                android:textSize="14sp"
                android:textColor="@color/text_gray" />

            <TextView
                android:id="@+id/btnMenu"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:text="☰"
                android:textSize="20sp"
                android:textColor="@color/text_dark"
                android:gravity="center" />
        </LinearLayout>
    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/headerSearch"
        android:layout_above="@id/bottomNav"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Lista de médicos -->
            <LinearLayout
                android:id="@+id/listaMedicos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Card Médico 1 -->
                <LinearLayout
                    android:id="@+id/cardMedico1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/rounded_button"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="16dp">

                    <View
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="@drawable/diamond_shape"
                        android:layout_marginRight="16dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/nombreMedico1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Dr. Pepe Pepito"
                            android:textSize="16sp"
                            android:textColor="@color/text_dark"
                            android:textStyle="bold"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:id="@+id/especialidadMedico1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Cardiologia"
                            android:textSize="14sp"
                            android:textColor="@color/text_gray"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:id="@+id/ratingMedico1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="◇ 4.8 (128)"
                            android:textSize="12sp"
                            android:textColor="@color/text_gray" />
                    </LinearLayout>

                    <Button
                        android:id="@+id/btnAgendar1"
                        android:layout_width="80dp"
                        android:layout_height="40dp"
                        android:text="Agendar"
                        android:textSize="12sp"
                        android:textColor="@color/white"
                        android:background="@drawable/button_agendar"
                        android:layout_marginLeft="12dp" />
                </LinearLayout>

                <!-- Card Médico 2 -->
                <LinearLayout
                    android:id="@+id/cardMedico2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/rounded_button"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="16dp">

                    <View
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="@drawable/diamond_shape"
                        android:layout_marginRight="16dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/nombreMedico2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Dra. Pepa Pepita"
                            android:textSize="16sp"
                            android:textColor="@color/text_dark"
                            android:textStyle="bold"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:id="@+id/especialidadMedico2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Dermatologia"
                            android:textSize="14sp"
                            android:textColor="@color/text_gray"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:id="@+id/ratingMedico2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="◇ 4.6 (95)"
                            android:textSize="12sp"
                            android:textColor="@color/text_gray" />
                    </LinearLayout>

                    <Button
                        android:id="@+id/btnAgendar2"
                        android:layout_width="80dp"
                        android:layout_height="40dp"
                        android:text="Agendar"
                        android:textSize="12sp"
                        android:textColor="@color/white"
                        android:background="@drawable/button_agendar"
                        android:layout_marginLeft="12dp" />
                </LinearLayout>

                <!-- Card Médico 3 -->
                <LinearLayout
                    android:id="@+id/cardMedico3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/rounded_button"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="16dp">

                    <View
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="@drawable/diamond_shape"
                        android:layout_marginRight="16dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/nombreMedico3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Dr. Juan Perez"
                            android:textSize="16sp"
                            android:textColor="@color/text_dark"
                            android:textStyle="bold"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:id="@+id/especialidadMedico3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Clinico"
                            android:textSize="14sp"
                            android:textColor="@color/text_gray"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:id="@+id/ratingMedico3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="◇ 4.9 (203)"
                            android:textSize="12sp"
                            android:textColor="@color/text_gray" />
                    </LinearLayout>

                    <Button
                        android:id="@+id/btnAgendar3"
                        android:layout_width="80dp"
                        android:layout_height="40dp"
                        android:text="Agendar"
                        android:textSize="12sp"
                        android:textColor="@color/white"
                        android:background="@drawable/button_agendar"
                        android:layout_marginLeft="12dp" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <!-- Divider Line -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#9E9E9E"
        android:layout_above="@id/bottomNav" />

    <!-- Bottom Navigation -->
    <LinearLayout
        android:id="@+id/bottomNav"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:background="#FFFFFF"
        android:elevation="8dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp">

        <LinearLayout
            android:id="@+id/navHome"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <View
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/diamond_shape_gray"
                android:layout_marginBottom="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Home"
                android:textSize="12sp"
                android:textColor="@color/text_gray" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/navBuscar"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <View
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/diamond_shape"
                android:layout_marginBottom="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Buscar"
                android:textSize="12sp"
                android:textColor="@color/teal_icon" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/navTurnos"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <View
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/diamond_shape_gray"
                android:layout_marginBottom="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Turnos"
                android:textSize="12sp"
                android:textColor="@color/text_gray" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/navPerfil"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <View
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/diamond_shape_gray"
                android:layout_marginBottom="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Perfil"
                android:textSize="12sp"
                android:textColor="@color/text_gray" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>

