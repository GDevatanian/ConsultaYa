<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="16dp">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_arrow_back"
            android:padding="4dp"
            app:tint="#424242" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Consulta de Emergencia"
            android:textSize="18sp"
            android:textColor="@color/text_dark"
            android:layout_marginLeft="16dp" />
    </LinearLayout>

    <!-- Contenido central -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/header"
        android:layout_above="@id/buttonsContainer"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="32dp">

        <!-- Icono grande de emergencia -->
        <View
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginBottom="32dp"
            android:background="@drawable/ic_emergency_call"
            android:backgroundTint="@color/red_cancel" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¿Necesitas atención urgente?"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#E53935"
            android:gravity="center"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Un médico general te atenderá por videollamada en los próximos minutos."
            android:textSize="16sp"
            android:textColor="@color/text_gray"
            android:gravity="center"
            android:layout_marginBottom="24dp" />

        <!-- Info card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_button"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Este servicio incluye:"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/text_dark"
                android:layout_marginBottom="12dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="• Videollamada con médico de guardia"
                android:textSize="14sp"
                android:textColor="@color/text_gray"
                android:layout_marginBottom="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="• Atención disponible 24/7"
                android:textSize="14sp"
                android:textColor="@color/text_gray"
                android:layout_marginBottom="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="• Orientación médica inmediata"
                android:textSize="14sp"
                android:textColor="@color/text_gray" />

        </LinearLayout>

    </LinearLayout>

    <!-- Botones inferiores -->
    <LinearLayout
        android:id="@+id/buttonsContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:padding="20dp"
        android:background="#FFFFFF">

        <TextView
            android:id="@+id/btnConectar"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@drawable/rounded_button_danger"
            android:text="Sí, conectar ahora"
            android:textColor="#E53935"
            android:textSize="16sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="12dp" />

        <TextView
            android:id="@+id/btnCancelar"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@drawable/rounded_button"
            android:text="Cancelar"
            android:textColor="@color/text_gray"
            android:textSize="16sp"
            android:gravity="center" />

    </LinearLayout>

</RelativeLayout>

