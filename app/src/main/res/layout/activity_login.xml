<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient"
    android:padding="24dp">

    <!-- Contenido Central (Logo y Formulario) -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottomButtons"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:paddingTop="40dp">

            <!-- Logo / Icono -->
            <View
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginBottom="0dp"
                android:background="@drawable/ic_app_logo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ConsultaYa"
                android:textSize="32sp"
                android:textColor="@color/teal_icon"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tu salud, al instante"
                android:textSize="16sp"
                android:textColor="@color/text_gray"
                android:layout_marginBottom="48dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="¡Hola de nuevo!"
                android:textSize="24sp"
                android:textColor="@color/text_dark"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"
                android:gravity="start" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ingresa tus datos para continuar"
                android:textSize="14sp"
                android:textColor="@color/text_gray"
                android:layout_marginBottom="24dp"
                android:gravity="start" />

            <!-- Campo Usuario -->
            <EditText
                android:id="@+id/etUser"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@drawable/rounded_field"
                android:hint="Usuario"
                android:inputType="text"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:drawableLeft="@android:drawable/ic_menu_my_calendar"
                android:drawablePadding="12dp"
                android:drawableTint="@color/teal_icon"
                android:textColor="@color/text_dark"
                android:textColorHint="@color/text_gray"
                android:layout_marginBottom="16dp" />

            <!-- Campo Contraseña -->
            <EditText
                android:id="@+id/etPassword"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@drawable/rounded_field"
                android:hint="Contraseña"
                android:inputType="textPassword"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:drawableLeft="@android:drawable/ic_lock_idle_lock"
                android:drawableRight="@drawable/ic_eye_hidden"
                android:drawablePadding="12dp"
                android:drawableTint="@color/teal_icon"
                android:textColor="@color/text_dark"
                android:textColorHint="@color/text_gray"
                android:layout_marginBottom="12dp" />

            <TextView
                android:id="@+id/tvForgotPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¿Olvidaste tu contraseña?"
                android:textColor="@color/teal_icon"
                android:textSize="14sp"
                android:layout_gravity="end"
                android:layout_marginBottom="24dp" />

        </LinearLayout>
    </ScrollView>

    <!-- Botones Inferiores -->
    <LinearLayout
        android:id="@+id/bottomButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="16dp">

        <!-- Botón Ingresar -->
        <Button
            android:id="@+id/btnLogin"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Ingresar"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:backgroundTint="@color/teal_icon"
            android:background="@drawable/rounded_button"
            android:layout_marginBottom="12dp" />

        <!-- Botón Registrarse -->
        <Button
            android:id="@+id/btnRegister"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Crear cuenta"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/teal_icon"
            android:backgroundTint="@null"
            android:stateListAnimator="@null"
            android:background="@drawable/rounded_button_secondary" />

    </LinearLayout>

</RelativeLayout>
