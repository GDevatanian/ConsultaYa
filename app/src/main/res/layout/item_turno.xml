<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    android:background="@drawable/rounded_button"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:padding="16dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imagenMedico"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/pepe_pepito"
        app:civ_border_width="1dp"
        app:civ_border_color="@color/teal_border"
        android:contentDescription="@null" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/fechaHora"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10/11/25, 15:00hs"
            android:textSize="16sp"
            android:textColor="@color/text_dark"
            android:textStyle="bold"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/especialidadMedico"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cardiologia"
            android:textSize="14sp"
            android:textColor="@color/text_gray"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/nombreMedico"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dr. Pepe Pepito"
            android:textSize="12sp"
            android:textColor="@color/text_gray" />
    </LinearLayout>

    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_arrow_forward"
        android:layout_marginStart="12dp"
        android:contentDescription="Ver detalles del turno" />

</LinearLayout>

