<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient">

    <ScrollView
        android:id="@+id/scrollContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottomNav"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Header con flecha y tÃ­tulo -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp">

                <ImageView
                    android:id="@+id/btnBack"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_arrow_back"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:padding="4dp"
                    app:tint="@color/text_dark" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Videoconsulta"
                    android:textSize="20sp"
                    android:textColor="@color/text_dark"
                    android:textStyle="bold"
                    android:layout_centerHorizontal="true" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <!-- TÃ­tulo -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SerÃ¡s atendido por:"
                    android:textSize="14sp"
                    android:textColor="@color/text_gray"
                    android:layout_marginBottom="16dp" />

                <!-- SecciÃ³n con foto de perfil y datos del profesional -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="24dp">

                    <!-- Foto de perfil (rombo) -->
                    <View
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="@drawable/diamond_shape"
                        android:layout_marginEnd="16dp" />

                    <!-- InformaciÃ³n del profesional -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <!-- Nombre del profesional -->
                        <TextView
                            android:id="@+id/nombreProfesional"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="NOMBRE DEL PROFESIONAL"
                            android:textSize="18sp"
                            android:textColor="@color/text_dark"
                            android:textStyle="bold"
                            android:layout_marginBottom="4dp" />

                        <!-- Especialidad -->
                        <TextView
                            android:id="@+id/especialidadProfesional"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="CardiologÃ­a"
                            android:textSize="14sp"
                            android:textColor="@color/text_gray" />

                    </LinearLayout>

                </LinearLayout>

                <!-- InformaciÃ³n del turno -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ“…"
                        android:textSize="16sp"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:id="@+id/fechaHoraTurno"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Martes 30 de noviembre 15:00hs"
                        android:textSize="14sp"
                        android:textColor="@color/text_dark" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="24dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="â±ï¸"
                        android:textSize="16sp"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="DuraciÃ³n: 30"
                        android:textSize="14sp"
                        android:textColor="@color/text_dark" />

                </LinearLayout>

                <!-- DescripciÃ³n -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="DescripciÃ³n:"
                    android:textSize="14sp"
                    android:textColor="@color/text_dark"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/descripcionTurno"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:background="@drawable/rounded_button"
                    android:padding="16dp"
                    android:text="DescripciÃ³n..."
                    android:textSize="14sp"
                    android:textColor="@color/text_gray"
                    android:gravity="top|start"
                    android:layout_marginBottom="32dp" />

                <!-- Botones -->
                <Button
                    android:id="@+id/btnIngresarLlamada"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="ðŸ“¹ Ingresar a la llamada"
                    android:textSize="16sp"
                    android:textColor="@color/text_dark"
                    android:background="@drawable/button_green_soft"
                    android:layout_marginBottom="12dp" />

                <Button
                    android:id="@+id/btnCancelarConsulta"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="âŒ Cancelar consulta"
                    android:textSize="16sp"
                    android:textColor="@color/text_dark"
                    android:background="@drawable/button_red_soft" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <!-- Navigation Bar -->
    <LinearLayout
        android:id="@+id/bottomNav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:background="@color/teal_light"
        android:padding="12dp">

        <LinearLayout
            android:id="@+id/navHome"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <View
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/diamond_shape" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Home"
                android:textSize="10sp"
                android:textColor="@color/text_dark"
                android:layout_marginTop="4dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/navBuscar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <View
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/diamond_shape" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Buscar"
                android:textSize="10sp"
                android:textColor="@color/text_dark"
                android:layout_marginTop="4dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/navTurnos"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <View
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/diamond_shape" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Turnos"
                android:textSize="10sp"
                android:textColor="@color/text_dark"
                android:layout_marginTop="4dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/navPerfil"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <View
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/diamond_shape" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Perfil"
                android:textSize="10sp"
                android:textColor="@color/text_dark"
                android:layout_marginTop="4dp" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>