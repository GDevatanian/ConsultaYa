<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient">

    <ScrollView
        android:id="@+id/scrollContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottomNav"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Header con flecha y título -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp">

                <ImageView
                    android:id="@+id/btnBack"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_arrow_back"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:padding="4dp"
                    app:tint="@color/text_dark" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Videoconsulta"
                    android:textSize="20sp"
                    android:textColor="@color/text_dark"
                    android:textStyle="bold"
                    android:layout_centerHorizontal="true" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <!-- Título -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Serás atendido por:"
                    android:textSize="14sp"
                    android:textColor="@color/text_gray"
                    android:layout_marginBottom="16dp" />

                <!-- Sección con foto de perfil y datos del profesional -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="24dp">

                    <!-- Foto de perfil con borde verde -->
                    <FrameLayout
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:layout_marginEnd="16dp"
                        android:background="@drawable/avatar_circle_border"
                        android:padding="2dp">

                        <ImageView
                            android:id="@+id/imagenProfesional"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/avatar_circle_background"
                            android:scaleType="centerCrop"
                            android:clipToOutline="true"
                            android:src="@drawable/pepe_pepito"
                            android:contentDescription="@null" />
                    </FrameLayout>

                    <!-- Información del profesional -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <!-- Nombre del profesional -->
                        <TextView
                            android:id="@+id/nombreProfesional"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="NOMBRE DEL PROFESIONAL"
                            android:textSize="18sp"
                            android:textColor="@color/text_dark"
                            android:textStyle="bold"
                            android:layout_marginBottom="4dp" />

                        <!-- Especialidad -->
                        <TextView
                            android:id="@+id/especialidadProfesional"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Cardiología"
                            android:textSize="14sp"
                            android:textColor="@color/text_gray" />

                    </LinearLayout>

                </LinearLayout>

                <!-- Información del turno -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:background="@drawable/ic_calendar"
                        android:backgroundTint="@color/teal_icon" />

                    <TextView
                        android:id="@+id/fechaHoraTurno"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Martes 30 de noviembre 15:00hs"
                        android:textSize="14sp"
                        android:textColor="@color/text_dark" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="24dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:background="@drawable/ic_clock"
                        android:backgroundTint="@color/teal_icon"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Duración: 30"
                        android:textSize="14sp"
                        android:textColor="@color/text_dark" />

                </LinearLayout>

                <!-- Descripción -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Descripción:"
                    android:textSize="14sp"
                    android:textColor="@color/text_dark"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/descripcionTurno"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:background="@drawable/rounded_button"
                    android:padding="16dp"
                    android:text="Descripción..."
                    android:textSize="14sp"
                    android:textColor="@color/text_gray"
                    android:gravity="top|start"
                    android:layout_marginBottom="32dp" />

                <!-- Botones -->
                <Button
                    android:id="@+id/btnIngresarLlamada"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginBottom="12dp"
                    android:background="@drawable/button_green_soft"
                    android:text="Ingresar a la llamada"
                    android:textColor="@color/text_dark"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/btnCancelarConsulta"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/button_red_soft"
                    android:text="Cancelar consulta"
                    android:textColor="@color/text_dark"
                    android:textSize="16sp" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <!-- Divider Line -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#9E9E9E"
        android:layout_above="@id/bottomNav" />

    <!-- Bottom Navigation -->
    <LinearLayout
        android:id="@+id/bottomNav"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:background="#FFFFFF"
        android:elevation="8dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp">

        <LinearLayout
            android:id="@+id/navHome"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <View
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginBottom="4dp"
                android:background="@drawable/ic_home" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Home"
                android:textSize="12sp"
                android:textColor="@color/text_gray" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/navBuscar"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <View
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginBottom="4dp"
                android:background="@drawable/ic_doctor_search_home" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Buscar"
                android:textSize="12sp"
                android:textColor="@color/text_gray" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/navTurnos"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <View
                android:id="@+id/iconTurnos"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginBottom="4dp"
                android:background="@drawable/ic_calendar_clock"
                android:backgroundTint="@color/teal_icon" />

            <TextView
                android:id="@+id/textTurnos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Turnos"
                android:textSize="12sp"
                android:textColor="@color/teal_icon" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/navPerfil"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <View
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginBottom="4dp"
                android:background="@drawable/ic_profie" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Perfil"
                android:textSize="12sp"
                android:textColor="@color/text_gray" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>